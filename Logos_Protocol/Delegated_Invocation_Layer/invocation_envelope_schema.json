{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InvocationEnvelope",
  "type": "object",
  "required": [
    "protocol_id",
    "caller",
    "scope",
    "step_count",
    "revocation",
    "persistence",
    "composition",
    "audit_binding"
  ],
  "properties": {
    "protocol_id": { "type": "string" },
    "caller": { "const": "Logos_Agent" },
    "scope": { "const": "strictly_bounded" },
    "step_count": { "const": 1 },
    "revocation": { "const": "immediate" },
    "persistence": { "const": "none" },
    "composition": { "const": "disallowed" },
    "audit_binding": { "const": "mandatory" }
  },
  "additionalProperties": false
}
