{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "End-to-End Rewrite Packet",
  "type": "object",
  "required": ["metadata", "phases", "finalization"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["original_path", "legacy_path", "type_cast_name", "test_template", "file_hash", "batch_id", "init_timestamp"],
      "properties": {
        "original_path": { "type": "string" },
        "legacy_path": { "type": "string" },
        "type_cast_name": { "type": "string" },
        "test_template": { "type": "string" },
        "file_hash": { "type": "string" },
        "batch_id": { "type": "string" },
        "init_timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "phases": {
      "type": "object",
      "properties": {
        "phase_1_imports": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_2_symbols": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_2b_dead_code": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_3_dependencies": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_4_side_effects": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_5_rewrite_attempts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["attempt", "rewrite_path", "rewrite_hash", "timestamp", "status"],
            "properties": {
              "attempt": { "type": "integer" },
              "rewrite_path": { "type": "string" },
              "rewrite_hash": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" },
              "status": { "type": "string", "enum": ["complete", "skipped", "failed"] }
            }
          }
        },
        "phase_6_semantic_audit": { "$ref": "#/definitions/diagnostic_phase" },
        "phase_7_verification": {
          "type": "object",
          "properties": {
            "attempt_1": { "$ref": "#/definitions/verification_result" },
            "attempt_2": { "$ref": "#/definitions/verification_result" }
          }
        }
      }
    },
    "test_results": {
      "type": "object",
      "properties": {
        "executed": { "type": "boolean" },
        "passed": { "type": "boolean" },
        "output_log": { "type": "string" }
      }
    },
    "finalization": {
      "type": "object",
      "required": ["status", "sealed_timestamp", "confirmation_hash"],
      "properties": {
        "status": { "type": "string", "enum": ["PASS", "FAIL", "UNKNOWN"] },
        "sealed_timestamp": { "type": "string", "format": "date-time" },
        "confirmation_hash": { "type": "string" }
      }
    }
  },
  "metadata": {
    "type": "object",
    "required": ["original_path", "legacy_path", "type_cast_name", "test_template", "file_hash", "batch_id", "init_timestamp"],
    "properties": {
      "original_path": { "type": "string" },
      "legacy_path": { "type": "string" },
      "type_cast_name": { "type": "string" },
      "test_template": { "type": "string" },
      "file_hash": { "type": "string" },
      "batch_id": { "type": "string" },
      "init_timestamp": { "type": "string", "format": "date-time" }
    }
  },
  "phases": {
    "type": "object",
    "properties": {
      "phase_1_imports": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_2_symbols": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_2b_dead_code": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_3_dependencies": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_4_side_effects": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_5_rewrite_attempts": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["attempt", "rewrite_path", "rewrite_hash", "timestamp", "status"],
          "properties": {
            "attempt": { "type": "integer" },
            "rewrite_path": { "type": "string" },
            "rewrite_hash": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["complete", "skipped", "failed"] }
          }
        }
      },
      "phase_6_semantic_audit": { "$ref": "#/definitions/diagnostic_phase" },
      "phase_7_verification": {
        "type": "object",
        "properties": {
          "attempt_1": { "$ref": "#/definitions/verification_result" },
          "attempt_2": { "$ref": "#/definitions/verification_result" }
        }
      }
    }
  },
  "test_results": {
    "type": "object",
    "properties": {
      "executed": { "type": "boolean" },
      "passed": { "type": "boolean" },
      "output_log": { "type": "string" }
    }
  },
  "finalization": {
    "type": "object",
    "required": ["status", "sealed_timestamp", "confirmation_hash"],
    "properties": {
      "status": { "type": "string", "enum": ["PASS", "FAIL", "UNKNOWN"] },
      "sealed_timestamp": { "type": "string", "format": "date-time" },
      "confirmation_hash": { "type": "string" }
    }
  },
  "definitions": {
    "diagnostic_phase": {
      "type": "object",
      "properties": {
        "diagnostics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["error_type", "line", "char_start", "char_end"],
            "properties": {
              "error_type": { "type": "string" },
              "line": { "type": "integer" },
              "char_start": { "type": "integer" },
              "char_end": { "type": "integer" },
              "severity": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" },
              "details": { "type": "string" }
            }
          }
        }
      }
    },
    "verification_result": {
      "type": "object",
      "required": ["result"],
      "properties": {
        "result": { "type": "string", "enum": ["PASS", "FAIL"] },
        "fail_reasons": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
