{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Semantic_Registry_Schema",
  "description": "Authoritative schema governing the Semantic Lexicon Registry for LOGOS Externalization. Enforces cross-domain consistency between templates, registries, and generated artifacts.",
  "type": "object",
  "required": [
    "registry_name",
    "phase",
    "layer",
    "version",
    "generated_at",
    "governed_by_schema",
    "entries"
  ],
  "properties": {
    "registry_name": {
      "type": "string",
      "const": "SEMANTIC_REGISTRY"
    },
    "phase": {
      "type": "integer",
      "minimum": 1
    },
    "layer": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "governed_by_schema": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "term",
          "term_id",
          "part_of_speech",
          "natural_language_definition",
          "usage_constraints",
          "lambda_signature",
          "lambda_role",
          "lambda_notes",
          "pxl_grounding",
          "pxl_constraints",
          "status",
          "introduced_in_version"
        ],
        "properties": {
          "term": {
            "type": "string"
          },
          "term_id": {
            "type": "string"
          },
          "part_of_speech": {
            "type": "string",
            "enum": [
              "state",
              "operator",
              "function",
              "constant",
              "noun"
            ]
          },
          "natural_language_definition": {
            "type": "string"
          },
          "usage_constraints": {
            "type": "string"
          },
          "lambda_signature": {
            "type": "string"
          },
          "lambda_role": {
            "type": "string"
          },
          "lambda_notes": {
            "type": "string"
          },
          "pxl_grounding": {
            "type": "string",
            "description": "Formal PXL grounding expression associated with this semantic entry. Informational, not evaluated."
          },
          "pxl_constraints": {
            "type": "string",
            "description": "Formal PXL constraint expression governing valid usage of this semantic entry. Informational, not evaluated."
          },
          "status": {
            "type": "string",
            "enum": ["canonical"]
          },
          "introduced_in_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
