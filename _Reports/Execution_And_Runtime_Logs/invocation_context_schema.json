{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InvocationContext",
  "type": "object",
  "required": [
    "caller_identity",
    "intended_scope",
    "frequency",
    "persistence",
    "compositional_context",
    "revocability"
  ],
  "properties": {
    "caller_identity": { "type": "string" },
    "intended_scope": { "enum": ["read_only", "bounded", "unspecified"] },
    "frequency": { "enum": ["single_step", "repeated", "continuous"] },
    "persistence": { "enum": ["none", "bounded", "unspecified"] },
    "compositional_context": {
      "type": "array",
      "items": { "type": "string" }
    },
    "revocability": { "enum": ["immediate", "delayed", "none"] }
  },
  "additionalProperties": false
}
