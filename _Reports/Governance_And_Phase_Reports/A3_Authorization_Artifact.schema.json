{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A3_Authorization_Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "artifact_type",
    "issuer",
    "issued_at_utc",
    "expires_at_utc",
    "scope",
    "bounds",
    "revocable",
    "audit",
    "signature"
  ],
  "properties": {
    "artifact_type": {
      "const": "A3_DELEGATED_AUTONOMY_AUTHORIZATION"
    },
    "issuer": {
      "type": "string",
      "description": "External authority identifier (sole system principal at this stage)."
    },
    "issued_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowed_actions"],
      "properties": {
        "allowed_actions": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "bounds": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_ticks", "max_duration_seconds"],
      "properties": {
        "max_ticks": { "type": "integer", "minimum": 0 },
        "max_duration_seconds": { "type": "integer", "minimum": 0 }
      }
    },
    "revocable": {
      "type": "boolean",
      "const": true
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["log_level", "log_sink"],
      "properties": {
        "log_level": { "enum": ["FULL"] },
        "log_sink": { "type": "string" }
      }
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["alg", "value"],
      "properties": {
        "alg": { "type": "string" },
        "value": { "type": "string" }
      }
    }
  }
}
